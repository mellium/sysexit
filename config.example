[[virtualhost]]

	domain = "samwhited.com"

	[virtualhost.c2s]
		addr = "0.0.0.0:5222"
		certfile = "default.crt"
		keyfile = "default.key"
		dhparams = "default.dhparams"

	[virtualhost.s2s]
		addr = ":5223"
		certfile = "default.crt"
		keyfile = "default.key"
		dhparams = "default.dhparams"



[log]

	[log.console]
	level = "info"

	[log.syslog]
	level   = "info"
	network = "udp"
	# raddr = ""

	[[log.file]]
	level    = "error"
	filename = "/var/log/mellium/mel.err.log"

	[[log.file]]
	level    = "info"
	filename = "/var/log/mellium/mel.log"
